{
    "name": "aaemnnosttv/boiler",
    "description": "_____________",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Evan Mattson",
            "email": "me@aaemnnost.tv"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Boiler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/src"
        }
    },
    "require": {
        "php": "^7.0",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "johnpbloch/wordpress": "^4.9",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-phpunit/wp-phpunit": "^4.9"
    },
    "scripts": {
        "lint": "phpcs",
        "lint-fix": "phpcbf",
        "test": "phpunit"
    }
}
